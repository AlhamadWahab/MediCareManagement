@model MediCareSecurity_IdentityManagementLayer.Models.ManageUserRolesViewModel

@{
    ViewData["Title"] = $"Manage {Model.UserName} Roles";
}


<h1>Manage<span class="text-warning">@Model.UserName</span> <span style="color:maroon">Roles</span></h1>


<form method="post">
    <div class="card text-white bg-dark mb-3" style="max-width: 18rem;">
        <div class="card-header">Manage Role</div>
        <div class="card-body">
            <h5 class="card-title">@Model.UserName</h5>
            <input hidden asp-for="UserId" />
            <p class="card-text">
                @for (int i = 0; i < Model.Roles.Count; i++)
                {
                    <div class="form-check m-1">
                        <input type="hidden" asp-for="@Model.Roles[i].RoleName" />
                        <input asp-for="@Model.Roles[i].IsSelected" class="form-check-input" />
                        <label asp-for="@Model.Roles[i].IsSelected" class="form-check-label">@Model.Roles[i].RoleName</label>
                    </div>
                }
                <div asp-validation-summary="All" class="text-danger"></div>
            </p>
        </div>
        <div class="card-footer">
            <button type="submit" class="btn btn-primary">Save</button>
            <a asp-action="Index" class="btn btn-secondary">Cancel</a>
        </div>
    </div>
</form>
@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}