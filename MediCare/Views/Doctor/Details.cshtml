</div>
<div class="m-3">
    @if(User.IsInRole("Admin")){
        <a class="btn btn-outline-warning" asp-controller="Doctor" asp-action="Edit" asp-route-id="@Model?.Id">Edit</a>
    }
    <a class="btn btn-outline-secondary" asp-controller="Doctor" asp-action="Index">Back to List</a>
</div>