    ViewData["Title"] = "Details";
}
<h3>Doctor Informations:</h3>

<div class="container">
    <div class="row">

        <div class="border-3 shadow">
            <dt class="col-sm-2" style="text-align: start; color:cadetblue">
                @Html.DisplayNameFor(model => model.FirstName)
            </dt>
            <dd class="col-sm-10" style="text-align: start">
                @Html.DisplayFor(model => model.FirstName)
            </dd>
            <dt class="col-sm-2" style="text-align: start; color:cadetblue">
