@model IEnumerable<BusinessLogicLayer.DTOs.DoctorDto.DoctorDTO>

<div class="container m-auto p-auto">
    <div class="row shadow-sm">
        <div class="text-start col-6">
            <h2 class="text-dark">
                MediCare Doctors
            </h2>
        </div>
        <div class="col-6 text-end">
            <a asp-controller="Doctor" asp-action="Create" class="btn btn-secondary bg-body-tertiary shadow-sm">
                <i class="bi bi-plus-circle"> </i> Add New Doctor Infos
            </a>
        </div>
    </div>

    <div class="row pb-3 mt-5">

        @foreach (var obj in Model.OrderBy(m => m.Id))
        {
            <div class="row col-lg-3 col-sm-6 ms-2">
                <div class="card mb-3 shadow border-warning-subtle" style="width: 18rem; border-radius: 9px">
                    <img style="border-radius: 17px;  width: 230px; height: 190px;" src="@obj.ProfilePicture" class="card-img-top mt-2 mb-2" alt="pic come soon.." />
                    <div class="card-body">
                        <h4 class="card-title">@obj.Name</h4>
                        <p class="card-text">@obj.Specialty.</p>
                        <a asp-controller="Doctor" asp-action="Details" asp-route-id="@obj.Id" class="btn btn-outline-info rounded-5">Details</a>
                        <a asp-controller="Doctor" asp-action="Delete" asp-route-id="@obj.Id" class="btn btn-outline-danger rounded-5">Delete</a>
                        <a asp-controller="Doctor" asp-action="Edit" asp-route-id="@obj.Id" class="btn btn-outline-warning rounded-5">Edit</a>
                    </div>
                </div>
            </div>
        }
    </div>
</div>