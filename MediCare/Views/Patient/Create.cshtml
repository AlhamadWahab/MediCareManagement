@model BusinessLogicLayer.DTOs.PatientDto.PatientDTO

<div class="row">
    <form method="post" asp-action="Create">
        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
        <div class="border p-3 mt-4">
            <h2 class="text-primary-emphasis">
                Create Patient Infos
            </h2>
            <hr />
        </div>
        <div class="mb-3 text-start">
            <label asp-for="Name">Patient Name</label>
            <input type="text" asp-for="Name" class="form-control" />
            <span asp-validation-for="Name" class="text-danger"></span>

            <div class="mb-3 text-start">
                <label asp-for="Diagnoses">Patient Diagnoses</label>
                <input type="text" asp-for="Diagnoses" class="form-control" />
                <span asp-validation-for="Diagnoses" class="text-danger"></span>
            </div>
            <div class="mb-3 text-start">
                <label asp-for="Address">Patient Address</label>
                <input type="text" asp-for="Address" class="form-control" />
                <span asp-validation-for="Address" class="text-danger"></span>
            </div>
            <div class="mb-3 text-start">
                <label asp-for="InsuranceProvider">Patient Insurance Provider</label>
                <input type="text" asp-for="InsuranceProvider" class="form-control" />
                <span asp-validation-for="InsuranceProvider" class="text-danger"></span>
            </div>
            <div class="mb-3 text-start">
                <label asp-for="Email">Patient Email</label>
                <input type="text" asp-for="Email" class="form-control" />
                <span asp-validation-for="Email" class="text-danger"></span>
            </div>
            <div class="mb-3 text-start">
                <label asp-for="Telefon">Patient Telefon</label>
                <input type="text" asp-for="Telefon" class="form-control" />
                <span asp-validation-for="Telefon" class="text-danger"></span>
            </div>
        </div>
        <button type="submit" class="btn btn-primary form-control">Create</button>
        <a asp-controller="Patient" asp-action="Index" class="btn btn-outline-secondary form-control">Back</a>
    </form>
</div>
@section Scripts{
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}