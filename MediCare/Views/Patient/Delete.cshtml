@model BusinessLogicLayer.DTOs.PatientDto.PatientDTO
<div class="container m-auto p-auto">
    <div class="row shadow-sm">
        <div class="text-start col-6">
            <h2 class="text-dark">
                Delete Patient Information
            </h2>
        </div>
    </div>

    <div class="mt-4">
        <h3>Are you sure you want to delete this?</h3>
        <div>
            <h4>Patient</h4>
            <hr />
            <dl class="row text-start">
                <dt class="col-sm-2 " style="text-align: start;">
                    First Name
                </dt>
                <dd class="col-sm-10">
                    @Model.FirstName
                </dd>
                <dt class="col-sm-2 " style="text-align: start;">
                    Last Name
                </dt>
                <dd class="col-sm-10">
                    @Model.LastName
                </dd>
                <dt class="col-sm-2">
                    Insurance Provider
                </dt>
                <dd class="col-sm-10">
                    @Model.InsuranceProvider
                </dd>
                <dt class="col-sm-2">
                    Address
                </dt>
                <dd class="col-sm-10">
                    @Model.Address
                </dd>
                <dt class="col-sm-2">
                    Telefon
                </dt>
                <dd class="col-sm-10">
                    @Model.Telefon
                </dd>
                <dt class="col-sm-2">
                    Email
                </dt>
                <dd class="col-sm-10">
                    @Model.Email
                </dd>
                <dt class="col-sm-2">
                    Diagnoses
                </dt>
                <dd class="col-sm-10">
                    @Model.Diagnoses
                </dd>
            </dl>

            <form asp-action="DeleteConfirmed" method="post" style="text-align: start;">
                <input type="hidden" asp-for="Id" />
                <div class="form-group mt-3">
                    <input type="submit" value="Delete" class="btn btn-danger" />
                    <a asp-action="Index" class="btn btn-secondary">Cancel</a>
                </div>
            </form>
        </div>
    </div>
</div>
