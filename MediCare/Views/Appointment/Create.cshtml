@model BusinessLogicLayer.ViewModelsDTO.DP_AppVMDTO

<div class="row">
    <div class="col-md-4">
        <form asp-action="Create" method="post">
            <div class="form-group mt-3">
                <label asp-for="Doctor_Id" class="form-label"></label>
                <select asp-for="Doctor_Id" class="form-control" asp-items="Model.Doctors">
                    <option value="">-- Select a Doctor --</option>
                </select>
            </div>

            <div class="form-group mt-3">
                <label asp-for="Patient_Id" class="form-label"></label>
                <select asp-for="Patient_Id" class="form-control" asp-items="Model.Patients">
                    <option value="">-- Select a Patient --</option>
                </select>
            </div>

            <div class="form-group mt-3">
                <button type="submit" class="btn btn-primary">Create Appointment</button>
                <a asp-action="Index" class="btn btn-secondary">Cancel</a>
            </div>
        </form>
    </div>
</div>