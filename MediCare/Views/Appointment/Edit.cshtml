@model BusinessLogicLayer.DTOs.AppointmentDto.AppointmentDTO

@{
    ViewData["Title"] = "Edit Appointment";
}

<div class="container mt-5">
    <h1>Edit Appointment</h1>

    @using (Html.BeginForm())
    {
        @Html.AntiForgeryToken()

        <div asp-validation-summary="ModelOnly" class="text-danger"></div>

        <div class="form-group">
            <label asp-for="Reason" class="control-label"></label>
            <input asp-for="Reason" class="form-control" />
            <span asp-validation-for="Reason" class="text-danger"></span>
        </div>

        <div class="form-group">
            <div class="form-check">
                <input asp-for="IsFirstVisit" class="form-check-input" type="checkbox" />
                <label asp-for="IsFirstVisit" class="form-check-label"></label>
            </div>
            <span asp-validation-for="IsFirstVisit" class="text-danger"></span>
        </div>

        <h4>Patient Information</h4>
        <div class="form-group">
            <label asp-for="Patient.FirstName" class="control-label"></label>
            <input asp-for="Patient.FirstName" class="form-control" />
            <span asp-validation-for="Patient.FirstName" class="text-danger"></span>
        </div>

        <div class="form-group">
            <label asp-for="Patient.LastName" class="control-label"></label>
            <input asp-for="Patient.LastName" class="form-control" />
            <span asp-validation-for="Patient.LastName" class="text-danger"></span>
        </div>

        <h4>Doctor Information</h4>
        <div class="form-group">
            <label asp-for="Doctor.FirstName" class="control-label"></label>
            <input asp-for="Doctor.FirstName" class="form-control" />
            <span asp-validation-for="Doctor.FirstName" class="text-danger"></span>
        </div>

        <div class="form-group">
            <label asp-for="Doctor.LastName" class="control-label"></label>
            <input asp-for="Doctor.LastName" class="form-control" />
            <span asp-validation-for="Doctor.LastName" class="text-danger"></span>
        </div>

        <div class="form-group">
            <input type="hidden" asp-for="Id" />
            <button type="submit" class="btn btn-primary">Save Changes</button>
            <a asp-action="Index" class="btn btn-secondary">Cancel</a>
        </div>
    }
</div>

@section Scripts {
    <script src="https://cdnjs.cloudflare.com/ajax/libs/jquery-validate/1.19.3/jquery.validate.min.js"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/jquery-validation-unobtrusive/3.2.11/jquery.validate.unobtrusive.min.js"></script>
}